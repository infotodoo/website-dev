<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <record id="hob_form" model="ir.ui.view">
      <field name="name">hob.form</field>
      <field name="model">hob</field>
      <field name="arch" type="xml">
        <form string="hob">
           <group>
             <group>
                 <field name="nombre" string="Hobby"/>
               
              
             </group>
           </group>   
          
            
             
             
          

        </form>
      </field>
    </record> 


     




    <record id="view_hobtree" model="ir.ui.view">
      <field name="name">hob.tree</field>
      <field name="model">hob</field>
        <field name="arch" type="xml">
            <tree string="sector hob">
             <field name="nombre" string="Hobbies"/>
            
              
              
                
            </tree>
        </field>
    </record>

    <record id="action_hob" model="ir.actions.act_window">
        <field name="name">Hobbies</field>
        <field name="res_model">hob</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Hobbies
          </p>
        </field>
    </record>

    <menuitem name='Hobbies'
            action='action_hob'
            id='alergia_menu'
            parent='hr_recruitment.menu_hr_recruitment_configuration'
            sequence='15' /> 

    </data>   



    

    



</odoo>

